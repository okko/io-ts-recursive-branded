{
  "compilerOptions": {
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "dist",
    "strict": true,
    "sourceMap": true,
    "target": "es2019",
    "typeRoots": ["./node_modules/@types", "./typings"],
    "resolveJsonModule": true,
  },
  "include": [
    "src/**/*",
  ]
}
